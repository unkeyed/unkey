{
  "version": "1.1",
  "name": "Status Check",
  "secrets": {
    "rootKey": "from-cli"
  },
  "env": {
    "baseUrl": "https://api.unkey.dev",
    "apiId": "api_J7MXWBmycyMoTALYkts6Nz"
  },
  "config": {
    "loadTest": {
      "phases": [
        {
          "duration": 10,
          "arrivalRate": 1
        },
        {
          "duration": 60,
          "arrivalRate": 10
        }
      ]
    }
  },
  "tests": {
    "example": {
      "steps": [
        {
          "name": "Create Key",
          "http": {
            "url": "${{env.baseUrl}}/v1/keys",
            "method": "POST",
            "headers": {
              "Content-Type": "application/json",
              "Authorization": "Bearer ${{secrets.rootKey}}"
            },
            "json": {
              "apiId": "${{env.apiId}}"
            },
            "check": {
              "status": "/^20/",
              "jsonpath": {
                "$.keyId": [{ "isString": true }],
                "$.key": [{ "isString": true }]
              }
            },
            "captures": {
              "key": {
                "jsonpath": "$.key"
              },
              "keyId": {
                "jsonpath": "$.keyId"
              }
            }
          }
        },
        {
          "name": "Verify Key",
          "http": {
            "url": "${{env.baseUrl}}/v1/keys/verify",
            "method": "POST",
            "headers": {
              "Content-Type": "application/json"
            },
            "json": {
              "key": "${{captures.key}}"
            },
            "check": {
              "status": "/^20/",
              "jsonpath": {
                "$.valid": true
              }
            }
          }
        },
        {
          "name": "Random Invalid Key",
          "http": {
            "url": "${{env.baseUrl}}/v1/keys/verify",
            "method": "POST",
            "headers": {
              "Content-Type": "application/json"
            },
            "json": {
              "key": "${{ | naughtystring }}"
            },
            "check": {
              "status": 200,
              "jsonpath": {
                "$.valid": false,
                "$.code": "NOT_FOUND"
              }
            }
          }
        }
      ]
    }
  }
}
