formatter:
  type: basic
  indent: 2
  retain_line_breaks_single: true
  scan_folded_as_literal: true
  drop_merge_tag: false
  pad_line_comments: 2
exclude:
  - node_modules/**
  - dist/**
  - web/node_modules/**
  - web/pnpm-lock.yaml
  - web/apps/agent/gen/**
  - svc/api/openapi/openapi-generated.yaml
  - .git/**
