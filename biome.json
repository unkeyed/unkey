{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "files": { "maxSize": 1572864 },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    },
    "ignore": [
      ".vitest",
      "node_modules",
      ".next",
      "dist",
      ".nuxt",
      "./packages/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".wrangler", ".react-email"]
  }
}
