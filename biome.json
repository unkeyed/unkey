{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "error"
      },
      "performance": {
        "noDelete": "off"
      }
    },
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".contentlayer"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "enabled": true,
    "lineWidth": 100,
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".contentlayer"]
  }
}
