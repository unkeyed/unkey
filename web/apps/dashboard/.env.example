# =============================================================================
# REQUIRED - Core Application
# =============================================================================

# Unkey Configuration (Required)
UNKEY_WORKSPACE_ID=
UNKEY_API_ID=

# Database Configuration (Required)
DATABASE_HOST="aws.connect.psdb.cloud"
DATABASE_USERNAME=
DATABASE_PASSWORD=

# Agent Service (Required)
AGENT_URL=
AGENT_TOKEN=

# Authentication Provider (Required)
# Options: "workos" or "local"
AUTH_PROVIDER=workos

# =============================================================================
# AUTHENTICATION - WorkOS (Required if AUTH_PROVIDER=workos)
# =============================================================================

WORKOS_API_KEY=
WORKOS_CLIENT_ID=
WORKOS_WEBHOOK_SECRET=
WORKOS_COOKIE_PASSWORD=
NEXT_PUBLIC_WORKOS_REDIRECT_URI=

# =============================================================================
# OPTIONAL - External Services
# =============================================================================


# Control Plane
CTRL_URL=http://127.0.0.1:7091
CTRL_API_KEY="your-local-dev-key"

# ClickHouse Analytics
CLICKHOUSE_URL=

# Resend Email Service
RESEND_API_KEY=
RESEND_AUDIENCE_ID=

# Plain Customer Support
PLAIN_API_KEY=

# OpenAI Integration
OPENAI_API_KEY=

# =============================================================================
# OPTIONAL - Rate Limiting & Security
# =============================================================================

# Unkey Root Key (for internal rate limiting)
# Requires permission: ratelimit.*.limit
UNKEY_ROOT_KEY=

# Cloudflare Turnstile (Bot Protection)
NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY=
CLOUDFLARE_TURNSTILE_SECRET_KEY=

# =============================================================================
# OPTIONAL - Integrations
# =============================================================================

# Stripe Billing
STRIPE_SECRET_KEY=
STRIPE_PRODUCT_IDS_PRO=
STRIPE_PRODUCT_IDS_ENTERPRISE=
STRIPE_WEBHOOK_SECRET=

# Vercel Integration
VERCEL_INTEGRATION_CLIENT_ID=
VERCEL_INTEGRATION_CLIENT_SECRET=

# GitHub Keys Verification
GITHUB_KEYS_URI=

# =============================================================================
# OPTIONAL - Monitoring & Alerts
# =============================================================================

# Sentry Error Tracking
SENTRY_DISABLED=false
NEXT_PUBLIC_SENTRY_DISABLED=false

# Slack Webhooks (Internal Alerts)
SLACK_WEBHOOK_CUSTOMERS=
SLACK_WEBHOOK_URL_SIGNUP=
SLACK_WEBHOOK_URL_LEAKED_KEY=

# Application Version (Auto-populated in CI/CD)
NEXT_PUBLIC_APP_VERSION=

# =============================================================================
# OPTIONAL MISC
# =============================================================================

# Cron Secret
CRON_SECRET=
