{
  "name": "unkey",
  "workspaces": ["apps/*", "packages/*"],
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "is-ci || husky install",
    "dev": "turbo run dev",
    "build": "pnpm turbo run build",
    "fmt": "pnpm biome format . --write && pnpm biome check .",
    "test": "turbo run test",
    "bootstrap": "turbo run bootstrap",
    "commit": "cz",
    "bump-versions": "pnpm changeset version && pnpm install",
    "knip": "knip --include files,dependencies"
  },
  "author": "Andreas Thomas",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.12.7",
    "@vitest/ui": "^1.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "knip": "^5.9.4",
    "lint-staged": "^15.2.2",
    "turbo": "^1.13.2",
    "typescript": "^5.3.3",
    "@million/lint": "^0.0.73",
    "vitest": "^1.3.0"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "1.4.1",
      "@opentelemetry/core": "1.13.0",
      "@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
      "@opentelemetry/resources": "1.13.0",
      "@opentelemetry/sdk-trace-base": "1.13.0",
      "@opentelemetry/sdk-trace-node": "1.13.0",
      "@opentelemetry/semantic-conventions": "1.13.0"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "biome check --apply"
  },
  "packageManager": "pnpm@8.6.9+sha256.c94450b6623ecedb5e8c7045c7e67cb240bbe88e17660b3d8c57207dfd1eff90"
}
